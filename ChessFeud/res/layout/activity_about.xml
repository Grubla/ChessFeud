<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="#CCCCCC" 
    android:orientation="vertical">
    <ImageView 
        android:id="@+id/imageView1" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_weight="1" 
        android:src="@drawable/logo_chessfeud" 
        android:contentDescription="@string/image_description_logotype"/>
    <LinearLayout 
        android:layout_width="200dp" 
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal" 
        android:layout_marginBottom="40dp" 
        android:layout_weight="1" 
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/about_group_photo" 
            android:layout_width="wrap_content" 
            android:layout_height="90dp" 
            android:src="@drawable/about_group_photo"
            android:contentDescription="@string/about_group_photo_descr"/>
        <TextView 
            android:id="@+id/about_text_dscr" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="@string/about_descr" 
            android:textSize="13dp"/>
        <TextView 
            android:id="@+id/about_text_copy" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="30dp" 
            android:text="@string/about_copy" 
            android:textSize="10dp"/>
    </LinearLayout>
    

</LinearLayout>